@model ASP.NET_Core_MVC.Models.LoginModel

@{
    ViewData["Title"] = "Страница Входа";
 
}

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="card form-log-reg">
        <div class="card-header text-center">
            <h2>Вход на сайт</h2>
        </div>
        <div class="container pt-3">
            <div class="form-group">
                <label asp-for="Name">Введите Login</label><br />
                <input class="log-reg-input-field" type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input class="log-reg-input-field"  asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-success" />
                <button asp-action="Register" asp-controller="Account" value="Регистрация" class="btn btn-primary float-right">Регистрация</button>
            </div>
        </div>
    </div>
</form>