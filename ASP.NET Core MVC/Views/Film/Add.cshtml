@model ASP.NET_Core_MVC.Models.Film

@{
    ViewData["Title"] = "Добавление";

}


<form asp-action="Add" asp-controller="Film" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="card form-log-reg">
        <div class="card-header text-center">
            <h2>Добавить фильм</h2>
        </div>
        <div class="container pt-3">
            <div class="form-group">
                <label asp-for="Title">Введите название</label><br />
                <input class="log-reg-input-field" type="text" asp-for="Title" />
                <span asp-validation-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear">Введите год выхода фильма</label><br />
                <input class="log-reg-input-field" type="text" asp-for="ReleaseYear" />
                <span asp-validation-for="ReleaseYear" />
            </div>
            <div class="form-group">
                <label asp-for="DurationMin">Введите время продолжения</label><br />
                <input class="log-reg-input-field" type="text" asp-for="DurationMin" />
                <span asp-validation-for="DurationMin" />
            </div>
            <div class="form-group">
                <label asp-for="AgeCategory">Введите возростную категорию</label><br />
                <input class="log-reg-input-field" type="text" asp-for="AgeCategory" />
                <span asp-validation-for="AgeCategory" />
            </div>
            <div class="form-group">
                <label asp-for="Rating">Введите рейтинг</label><br />
                <input class="log-reg-input-field" type="text" asp-for="Rating" />
                <span asp-validation-for="Rating" />
            </div>
            <div class="form-group">
                <label asp-for="TrailerLink">Введите ссылку трейлера</label><br />
                <input class="log-reg-input-field" type="text" asp-for="TrailerLink" />
                <span asp-validation-for="TrailerLink" />
            </div>
            <div class="form-group">
                <input class="log-reg-input-field" type="file" name="uploadedFile" />
            </div>
            <div class="form-group">
                <label asp-for="Hiden">Фильм скрыть для всех?</label><br />
                <input type="checkbox" asp-for="Hiden" checked />
                <span asp-validation-for="Hiden" />
            </div>
            <div class="form-group">
                <button asp-action="Index" asp-controller="Film" value="Добавить" class="btn btn-primary float-right">Назад</button>
                <input type="submit" value="Добавить" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>