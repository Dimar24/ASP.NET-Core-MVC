@model ASP.NET_Core_MVC.Models.Film
@{
    ViewData["Title"] = Model.Title;
}

    <div class="text-center">
        <h1 class="display-4">@Model.Title</h1>
        <iframe width="560" height="400" src="@Model.TrailerLink.Replace("watch?v=", "embed/")" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <h1 class="display-4 mt-4">Информация</h1>

        <h3 class="mt-4">Год выпуска: @Model.ReleaseYear</h3>
        <h3 class="mt-4">Время продолжительности: @Model.DurationMin</h3>
        <h3 class="mt-4">Возростной рейтинг: @Model.AgeCategory</h3>
        <h3 class="mt-4">Рейтинг фильма: @Model.Rating</h3>

    </div>